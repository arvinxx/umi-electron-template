{
  "name": "@umi-electron-template/main",
  "version": "2.0.0",
  "private": true,
  "description": "umi electron template",
  "author": "Arvin Xu<arvinx@foxmail.com>",
  "main": "dist/main/index.js",
  "scripts": {
    "prebuild": "electron-vite build",
    "build": "npm run prebuild && electron-builder build --config electron-builder.config.js",
    "clean": "rm -rf dist release .eslintcache ./src/.umi",
    "dev": "electron-vite dev -w",
    "electron:build-local": "NOTARIZE=false npm run build -- --dir --config.asar=false",
    "electron:build:linux": "npm run build --linux",
    "electron:build:mac": "npm run build --mac",
    "electron:build:win": "npm run build --win",
    "postinstall": "electron-builder install-app-deps",
    "lint-eslint": "max lint",
    "preview": "electron-vite preview",
    "test": "vitest --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc -p tsconfig-check.json",
    "postuninstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "chalk": "^4",
    "electron-is": "^3",
    "electron-updater": "^4.6.5",
    "log4js": "^6.4.1",
    "os-name": "^4",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "umi-request": "^1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9",
    "@umi-electron-template/common": "2.0.0",
    "concurrently": "^8",
    "cross-env": "^7",
    "electron": "^24",
    "electron-builder": "^23",
    "electron-builder-notarize": "^1",
    "electron-debug": "^3",
    "electron-devtools-installer": "^3",
    "electron-vite": "^1",
    "happy-dom": "^9",
    "react-devtools": "^4",
    "vitest": "latest"
  }
}
