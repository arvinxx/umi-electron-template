{
  "name": "@umi-electron-template/main",
  "version": "2.0.0",
  "private": true,
  "description": "umi electron template",
  "author": "Arvin Xu<arvinx@foxmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "max build electron",
    "build:local": "max build electron --dir",
    "build:mac-zip": "ts-node scripts/buildMacZip.ts",
    "clean": "rm -rf dist release .eslintcache ./src/.umi",
    "electron:build:linux": "max build electron --linux",
    "electron:build:mac": "max build electron --mac",
    "electron:build:win": "max build electron --win",
    "electron:dev": "PORT=4563 max dev electron",
    "electron:init": "max electron init",
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "rebuild-deps": "electron-builder install-app-deps",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc -p tsconfig-check.json",
    "postuninstall": "electron-builder install-app-deps"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "pnpm run lint:fix"
    ]
  },
  "dependencies": {
    "electron-updater": "^4.6.5",
    "log4js": "^6.4.1",
    "os-name": "^5",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "sqlite3": "5.0.0",
    "typeorm": "^0.2.43"
  },
  "devDependencies": {
    "@jest-runner/electron": "^3",
    "@types/fs-extra": "^9",
    "@types/node": "^16.11.26",
    "@umi-electron-template/common": "2.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "chalk": "^5",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "devtron": "^1.4.0",
    "electron": "^22",
    "electron-builder": "^23",
    "electron-builder-notarize": "^1",
    "electron-debug": "^3",
    "electron-devtools-installer": "^3",
    "electron-is": "^3",
    "fs-extra": "^11",
    "jest": "^29",
    "react-devtools": "^4",
    "sinon": "^9",
    "ts-jest": "^29",
    "ts-loader": "^9",
    "ts-node": "^10",
    "typescript": "^4",
    "umi-plugin-electron-builder": "^4",
    "webpack": "^5",
    "webpack-5-chain": "^8"
  }
}
